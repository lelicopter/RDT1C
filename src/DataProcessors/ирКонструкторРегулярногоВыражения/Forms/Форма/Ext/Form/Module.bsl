	РегВычислитель.Multiline = Ложь;
	РегВычислитель.Global = Истина;
	РегВычислитель.IgnoreCase = Истина;
	РегВычислитель.Pattern = "\t|\n";
	Возврат РегВычислитель.Test(ФорматированнаяСтрока);
	
